<h4>Post details:</h4>
<br />
<p>
    <%= @row['content'] %>
    <br />
    <br />
    Added at <%= @row['created_date'] %>
    <br />
</p>
<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |commento| %>
    <p>
        <%= commento['comment'] %>
        <br />
        <br />
        <span style="font-size: 75%; color: #999">Added at <%= commento['created_date'] %></span>
    </p>
    <hr />
<% end %>

<p>
    <form action="/details/<%= @row['id'] %>" method="POST" role="form">
        <textarea name="comment" class="form-control" style="width: 400px" rows="6" placeholder="Type text here"></textarea></br>
        <button type="submit" class="btn btn-primary">Add comment</button>
    </form>
</p>